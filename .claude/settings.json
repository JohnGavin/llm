{
  "env": {
    "MAX_THINKING_TOKENS": "1024"
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(quarto:*)",
      "Bash(R :*)",
      "Bash(Rscript:*)",
      "Bash(curl:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(done:*)",
      "Bash(sed:*)",
      "Bash(while:*)",
      "Bash(if:*)",
      "Bash(then:*)",
      "Bash(else:*)",
      "Bash(fi:*)",
      "Bash(export:*)",
      "Bash(claude:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "mcp__r-btw__btw_tool_files_list_files",
      "Read",
      "Write",
      "WebSearch",
      "WebFetch(domain:www.r-bloggers.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:*.github.io)",
      "WebFetch(domain:*.r-universe.dev)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/startup_check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "(/usr/bin/afplay -v 0.40 /System/Library/Sounds/Morse.aiff &) 2>/dev/null; exit 0"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "(/usr/bin/afplay -v 0.35 /System/Library/Sounds/Ping.aiff &) 2>/dev/null; exit 0"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
